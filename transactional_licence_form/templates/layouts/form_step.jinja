{% extends "layouts/standard_content.jinja" %}
{% from "components/heading.jinja" import heading %}
{% block javascript %}
  <script type="module"
          defer
          src="{{ static('js/dist/transactional_licence_form.js') }}"></script>
  <script type="module" defer src="{{ static('js/dist/location_picker.js') }}"></script>
{% endblock javascript %}
{% block head %}
  {{ wizard.form.media }}
{% endblock head %}
{% block is_full_screen %}
  <nav class="standard-content__navigation">
    <div class="mobile-only">
      {% block mobile_article_title %}
      {% endblock mobile_article_title %}
    </div>
    <div class="standard-content__navigation-links">
      {% block article_navigation %}
        {% call heading(tag="div", size="h3") %}
          Licence application steps
        {% endcall %}
        <ul>
          {% for steps in wizard.form.navigation_done %}<li>{{ steps }}</li>{% endfor %}
          <li>
            <b>{{ wizard.form.navigation_current }}</b>
          </li>
          {% for steps in wizard.form.navigation_todo %}<li>{{ steps }}</li>{% endfor %}
        </ul>
      {% endblock article_navigation %}
    </div>
  </nav>
{% endblock is_full_screen %}
{% block article_content %}
  <div class="transactional-licence-form">
    {% block pre_title %}
    {% endblock pre_title %}
    {% block step_title %}
      <h1 class="transactional-licence-form__step-title">{{ wizard.form.title }}</h1>
    {% endblock step_title %}
    <div class="transactional-licence-form__pre-form-content">
      {% block pre_form %}
      {% endblock pre_form %}
    </div>
    <form action=""
          method="post"
          id="transactional-licence-form-form"
          novalidate>
      {{ csrf_input }}
      {{ wizard.management_form }}
      {% if wizard.form.forms %}{{ wizard.form.management_form }}{% endif %}
      {% block form_inner %}
        {% if reviewing %}<input type="hidden" name="reviewing" value="true" />{% endif %}
        {% if wizard.form.forms %}
          {% for form in wizard.form.forms %}<div>{{ crispy(form) }}</div>{% endfor %}
        {% else %}
          <div>{{ crispy(wizard.form) }}</div>
        {% endif %}
      {% endblock form_inner %}
      <div class="transactional-licence-form__actions">
        {% if wizard.steps.prev %}
          <button name="wizard_goto_step"
                  type="button"
                  id="transactional-licence-form-previous-button"
                  class="button-secondary"
                  value="{{ wizard.steps.prev }}"
                  style="display:none">Previous</button>
          &nbsp;
        {% endif %}
        <input type="submit"
               class="{% if reviewing %}button-secondary{% else %}button-primary{% endif %}"
               value="{{ wizard.steps.current|submit_label_for_step }}" />
        {% if reviewing %}
          <button name="wizard_goto_step"
                  type="submit"
                  class="button-primary"
                  value="review">
            {% if reviewing %}
              Save and review
            {% else %}
              Review your answers
            {% endif %}
          </button>
        {% endif %}
      </div>
    </form>
    {% block post_form %}
    {% endblock post_form %}
  </div>
{% endblock article_content %}
{% block end_of_document_marker %}
{% endblock end_of_document_marker %}
