{% from "components/button.jinja" import button, button_variant_examples, button_size_examples, button_href_examples, button_contrast_examples %}
{% macro default() %}
  <h2>Buttons</h2>
  <h3>Variants</h3>
  <div class="components__grid">{{ button_variant_examples() }}</div>
  <h3>Sizes</h3>
  <div class="components__grid">{{ button_size_examples() }}</div>
  <h3>With contrast</h3>
  <div class="components__grid components--contrast">{{ button_contrast_examples() }}</div>
  <h3>With href</h3>
  <div class="components__grid">{{ button_href_examples() }}</div>
{% endmacro %}
{% macro single() %}
  <h2>Buttons</h2>
  <h3>Variants</h3>
  <div class="components__grid">{{ button_variant_examples() }}</div>
{% endmacro %}
{% macro primary() %}
  {% call button(variant="primary") %}
    Primary button
  {% endcall %}
{% endmacro %}
{% macro secondary() %}
  {% call button(variant="secondary") %}
    Secondary button
  {% endcall %}
{% endmacro %}
