{% from "govuk_frontend_jinja/components/checkboxes/macro.html" import govukCheckboxes %}
{% from "components/checkboxes.jinja" import checkboxes, checkboxes_examples %}
{% macro default_checkboxes() %}
  <h2>Checkboxes</h2>
  {{ checkboxes_examples() }}
{% endmacro %}
{% macro default() %}
  <h3>Default</h3>
  {{ checkboxes({
    "idPrefix": "checkbox",
    "name": "checkbox",
    "hint": {
      "text": "This is the hint text"
    },
    "items": [
      {
        "value": "option1",
        "text": "Option 1"
      },
      {
        "value": "option2",
        "text": "Option 2"
      },
      {
        "value": "option3",
        "text": "Option 3"
      }
    ]
  }) }}
{% endmacro %}
{% macro error() %}
  <h3>With error</h3>
  {{ checkboxes({
    "idPrefix": "checkbox-with-error",
    "name": "checkbox-with-error",
    "errorMessage": {
      "text": "This is error text"
    },
    "items": [
      {
        "value": "option1",
        "text": "Option 1"
      },
      {
        "value": "option2",
        "text": "Option 2"
      },
      {
        "value": "option3",
        "text": "Option 3"
      }
    ]
  }) }}
{% endmacro %}
{% macro conditional() %}
  <h3>Conditional</h3>
  {{ checkboxes({
    "idPrefix": "checkbox-with-conditional",
    "name": "checkbox-with-conditional",
    "items": [
      {
        "value": "option1",
        "text": "Option 1",
        "checked": true,
        "conditional": {
          "html": "This is something conditional"
        }
      },
      {
        "value": "option2",
        "text": "Option 2"
      },
      {
        "value": "option3",
        "text": "Option 3"
      }
    ]
  }) }}
{% endmacro %}
