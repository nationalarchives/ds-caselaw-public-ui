{% block desktop_article_title %}
  <small>Last updated on
    <time datetime="2025-01-21">21 January 2025</time>
  </small>
  <h1>Courts and tribunals in Find Case Law</h1>
{% endblock desktop_article_title %}
{% block article_navigation %}
  {% call contents(title="On this page") %}
    {% call list() %}
      {% call list_item() %}
        {% call link(href="#section-judgments") %}
          Judgments and decisions Find Case Law provides
        {% endcall %}
      {% endcall %}
      {% call list_item() %}
        {% call link(href="#section-date-ranges") %}
